<%= comments.each do |comment| %>
    <h2 class="tm-color-primary tm-post-title">Comments</h2>
    <hr class="tm-hr-primary tm-mb-45">
    <div class="tm-comment tm-mb-45">
        <figure class="tm-comment-figure">
            <img src="/img/img-01.jpg" height=50 width=50 alt="Image" class="mb-2 rounded-circle img-thumbnail">
            <figcaption class="tm-color-primary text-center">Abdullah Ahmed</figcaption>
        </figure>
        <div>
            <p>
                <%= comment.content %>
            </p>
            <div class="d-flex justify-content-between">
                <span class="tm-color-primary"><%= time_ago_in_words(comment.created_at) %> ago</span>
            </div>                                                 
        </div>    
        <a href="#" class="tm-color-primary m-3">REPLY</a>                   
    </div>   

    <%= render partial: 'comments/reply', locals: { replies: comment.replies } %>
<% end %>