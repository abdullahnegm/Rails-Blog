<%= replies.each do |reply| %>
    <div class="tm-comment tm-mb-45 container mx-5">
        <figure class="tm-comment-figure">
            <img src="/img/img-01.jpg" height=50 width=50 alt="Image" class="mb-2 rounded-circle img-thumbnail">
            <figcaption class="tm-color-primary text-center">Abdullah Ahmed</figcaption>
        </figure>
        <div>
            <p>
                <%= reply.content %>
            </p>
            <div class="d-flex justify-content-between">
                <span class="tm-color-primary"><%= time_ago_in_words(reply.created_at) %> ago</span>
            </div>                                                 
        </div>                       
    </div>   
    <hr class="tm-hr-primary tm-mb-45">
<% end %>