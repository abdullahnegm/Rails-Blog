
<article class="col-12 col-md-6 tm-post">
    <%= link_to post_path(post), class: "effect-lily tm-post-link tm-pt-60" do %>
        <div class="tm-post-link-inner">
            <img src="/img/img-01.jpg" alt="Image" class="img-fluid">                            
        </div>
        <h2 class="tm-pt-30 tm-color-primary tm-post-title"><%= post.title %></h2>
    <% end %>            
    <p class="tm-pt-30">
        <%= truncate( post.content, length: 150 ) %>
    </p>
    <div class="d-flex justify-content-between tm-pt-45" height="200">
        <span class="tm-color-primary"><%= post.user.username %></span>
        <span class="tm-color-primary"><%= time_ago_in_words( post.created_at ) %></span>
        <% if user_signed_in? && is_favourite?(post) %>
            <%= link_to "Unfollow", favourite_fav_posts_path(id: post.id), class: "btn btn-info" %>
        <% else %>
            <%= link_to "Follow", unfavourite_fav_posts_path(id: post.id), class: "btn btn-info" %>
        <% end %>
    </div>
    <hr>
</article>