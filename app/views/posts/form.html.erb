<%= form_with model: @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "Your Title Here" %>
  </div>
  <div class="form-group mt-4">
    <%= f.label :content %>
    <%= f.text_area :content, rows: 3, class: "form-control" %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary mt-4" %>
<% end %>
